<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.ch.mhy.widget.CircleImageView
                android:id="@+id/comment_reply_head"
                android:layout_width="40dp"
        		android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/def_head_big" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/comment_reply_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="与时间赛跑" />

            <TextView
                android:id="@+id/comment_reply_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="2015-10-10 13:57"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/comment_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="世界这么大，我要出去走走"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6C6C6C" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>