package com.ch.mhy.widget;

import android.content.Context;
import android.util.AttributeSet;
import android.widget.GridView;

/**
 * 增加对3.0以下版本的对获取纵向分隔高度的支持
 * @author xc.li
 * @date 2015年7月27日
 */
public class ChGridView extends GridView {
	
	private int mVerticalSpacing = 0;
	
	public ChGridView(Context context) {
		super(context);
	}
	public ChGridView(Context context, AttributeSet attrs) {
		super(context, attrs);
	}
	public ChGridView(Context context, AttributeSet attrs, int defStyle) {
		super(context, attrs, defStyle);
	}
	
	public int getmVerticalSpacing() {
		return mVerticalSpacing;
	}
	
	public void setmVerticalSpacing(int mVerticalSpacing) {
		super.setVerticalSpacing(mVerticalSpacing);
		this.mVerticalSpacing = mVerticalSpacing;
	}

	
}
