<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:my="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_collect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout 
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="0.6"
		    android:gravity="center"
		    >
		    <CheckBox 
		        android:id="@+id/cb_collect"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:focusable="false"
  				android:focusableInTouchMode="false"
  				 android:clickable="false"
		        android:enabled="false"
		        />
		</LinearLayout>

         <com.ch.mhy.widget.ScaleLinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                my:aspectRatio="1.0"
                android:gravity="center"
                my:aspectRatioBase="0">

            <ImageView
                    android:id="@+id/iv_bookreaded"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/ch_image_mobg2"/>
        </com.ch.mhy.widget.ScaleLinearLayout>>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_bookreaded_name"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="美国队长V5"
                  android:textStyle="bold"
                    />

            <TextView
                    android:id="@+id/tv_bookreaded_author"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="作者：Marvel Comics"
                    android:textColor="#dbdbdb"
                    android:textSize="14sp"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="评分："
                    android:textColor="#dbdbdb"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/tv_bookreaded_reading"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="更新到39话"
                    android:textColor="#dbdbdb"
                    android:textSize="14sp"/>

        </LinearLayout>
        
