package com.ch.mhy.activity.book.loadcomic;

import android.graphics.Bitmap;
import android.util.Log;

/** 
 * 图片加载的任务单元 
 * @author carrey 
 * 
 */  
public class ThreadPoolTaskBitmap extends ThreadPoolTask {
	private String url;
	private String urllocal;
	public ThreadPoolTaskBitmap(String url, String urllocal) {
		super(url, urllocal);
		// TODO Auto-generated constructor stub
		this.url=url;
		this.urllocal=urllocal;
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		if (!DiskCache.isCache(url)) {
			Log.d("tag", "判断缓存没有======");

			Bitmap bm = DiskCache.getImgFromNet(url, urllocal);
			if (bm != null)
				Log.d("tag", "开启新  加载======");
			if(bm!=null){
				DiskCache.addDiskCache(url, bm);
			}
		}
	}  
      
    
}  