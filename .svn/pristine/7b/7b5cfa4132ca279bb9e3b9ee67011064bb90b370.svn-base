<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:my="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="fill_parent"
            android:id="@+id/ll_cate_authname"
            android:layout_height="wrap_content">

        <com.ch.mhy.widget.ScaleLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                my:aspectRatio="1.0"
                android:layout_marginTop="10dp"
                android:gravity="center"
                my:aspectRatioBase="0">

            <ImageView
                    android:id="@+id/iv_cate_authorshow"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch_image_mobg2"
                    />
        </com.ch.mhy.widget.ScaleLinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_author_bookname"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="美国队长"
                    android:layout_marginBottom="2dp"
                    />

            <TextView
                    android:id="@+id/tv_author_authorname"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="作者：老马"
                    android:textColor="#ccc4c4"
                   android:textStyle="normal"
                    />
            <TextView
                    android:id="@+id/tv_author_renqi"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="人气：26354"
                    android:textColor="#ccc4c4"
                   android:textStyle="normal"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_df_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ch_cate_authgo"/>
        </LinearLayout>
    </LinearLayout>

   <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#c9c9c9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
</LinearLayout>