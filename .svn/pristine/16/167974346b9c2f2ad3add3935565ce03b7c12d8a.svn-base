package com.ch.mhy.activity.book.loadcomic;

import android.graphics.Bitmap;

public class ImageCacheLoad extends Thread {
	private boolean isRunning = true;
	private String url;
	private String localurl;
	private Bitmap bm;
	public ImageCacheLoad(String url, String localurl){
		this.url = url;
		this.localurl = localurl;
		this.start();
	}
	@Override
	public void run() {
		bm = DiskCache.getImgFromNet(url, localurl);
		DiskCache.addDiskCache(url, bm);
		isRunning = false;
	}
	public Bitmap getBitmap() {
		return bm;
	}
	
	public boolean isRunning() {
		return isRunning;
	}
	
	
}
