<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res/com.ch.mhy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
         <com.ch.mhy.widget.ScaleLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                my:aspectRatio="1.0"
                android:gravity="center"
                my:aspectRatioBase="0">

            <ImageView
                android:id="@+id/iv_book_head"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch_image_mobg2"/>
        </com.ch.mhy.widget.ScaleLinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_name"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

            <TextView
                android:id="@+id/iv_book_auth"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#dbdbdb"
                    />

            <TextView
                android:id="@+id/tv_book_lz"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#dbdbdb"
                    />

            <TextView
                    android:id="@+id/progressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
        </LinearLayout>
        
         <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/ll_df_del"
                android:gravity="center">
            <ImageView
                    android:id="@+id/tv_bookreaded_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/downdelete"
                    />
        </FrameLayout>


    </LinearLayout>
    
     <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#c9c9c9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    
</LinearLayout>
